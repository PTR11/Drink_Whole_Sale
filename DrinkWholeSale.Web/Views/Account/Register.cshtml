@using DrinkWholeSale.Persistence;

@model RegistrationViewModel
@* majd bekérjük/megjelenítjük a foglalás adatait *@
<form asp-controller="Account" asp-action="Register">
    @* Automatikus védelem XSRF támadás ellen *@

    <table>
        <tr>
            <td colspan="3">
                <div class="failureNotification">@Html.ValidationSummary(true, "A regisztráció sikertelen!")</div>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="contentHead">
                    Personal data:
                </div>
            </td>
        </tr>
        <tr>
            <td width="120">
                Name:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="GuestName" size="40" />
                <span asp-validation-for="GuestName"></span>
            </td>

        </tr>
        <tr>
            <td width="120">
                Address:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="GuestAddress" size="40" />
                <span asp-validation-for="GuestAddress"></span>
            </td>
        </tr>
        <tr>
            <td width="120">
                E-mail:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="GuestEmail" size="40" />
                <span asp-validation-for="GuestEmail"></span>
            </td>

        </tr>
        <tr>
            <td width="120">
                Phone number:
            </td>
            <td class="failureNotification" colspan="2">
                <input asp-for="GuestPhoneNumber" size="40" />
                <span asp-validation-for="GuestPhoneNumber"></span>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div class="contentHead">
                    Login data:
                </div>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                User name:
            </td>
            <td class="failureNotification">
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                Password:
            </td>
            <td class="failureNotification">
                <input asp-for="UserPassword" />
                <span asp-validation-for="UserPassword"></span>
            </td>
        </tr>
        <tr>
            <td width="150" colspan="2">
                Password confirmation:
            </td>
            <td class="failureNotification">
                <input asp-for="UserConfirmPassword" />
                <span asp-validation-for="UserConfirmPassword"></span>
            </td>
        </tr>
        <tr>
            <td colspan="3" height="70">
                <br />The password must be at least 3 character<br /><br />
                <input type="submit" value="Regisztráció" class="button" />
            </td>
        </tr>
    </table>
</form>

@section Scripts
{
    @* jQuery Validation használata a kliens oldali validációra *@
    <partial name="_ValidationScriptsPartial" />
}
